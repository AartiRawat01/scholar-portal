<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        
        body {
            background-image: url('/images/changepassimage.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            width: 100%;
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }


        .alert {
            display: none;
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #ff4d4d;
            color: #fff;
            padding: 15px 25px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            font-size: 16px;
            font-weight: bold;
            z-index: 1000;
            animation: fadeIn 0.5s ease, fadeOut 0.5s ease 3s; 
        }

        
        @keyframes fadeIn {
            from { opacity: 0; right: -50px; }
            to { opacity: 1; right: 20px; }
        }
        
        @keyframes fadeOut {
            from { opacity: 1; right: 20px; }
            to { opacity: 0; right: -50px; }
        }

    
        .alert .close-btn {
            margin-left: 15px;
            cursor: pointer;
            font-size: 18px;
            font-weight: bold;
            color: #fff;
        }

        .alert .close-btn:hover {
            color: #ffcccc;
        }
    </style>
</head>
<body onload="startAlert()"> 

    
    <div id="alertBox" class="alert">
        Alert! Change your password
        <span class="close-btn" onclick="closeAlert()">Ã—</span>
    </div>

    <div class="container">
        <img src="/images/logo.png" alt="Logo" class="logo">

        <form id="change-password-form">
            <h2>Change Password</h2>
            <div class="form-group">
                <label for="new-password">New Password:</label>
                <input type="password" id="new-password" name="new-password" required>
            </div>
            <div class="form-group">
                <label for="confirm-password">Confirm New Password:</label>
                <input type="password" id="confirm-password" name="confirm-password" required>
            </div>
            <button type="submit" id="changepassw">Change Password</button>
        </form>
    </div>

    <script>
        
        function showAlert() {
            const alertBox = document.getElementById('alertBox');
            alertBox.style.display = 'block';
            setTimeout(closeAlert, 3000); 
        }

    
        function startAlert() {
            showAlert(); 
            setInterval(showAlert, 5000); 
        }

        
        function closeAlert() {
            const alertBox = document.getElementById('alertBox');
            alertBox.style.display = 'none';
        }

        
        function getQueryParam(param) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(param);
        }

        const email = getQueryParam('email');

        
        document.getElementById('change-password-form').addEventListener('submit', async function(event) {
            event.preventDefault();

            const newPassword = document.getElementById('new-password').value;
            const confirmPassword = document.getElementById('confirm-password').value;

            if (newPassword !== confirmPassword) {
                alert('Passwords do not match!');
                return;
            }

            try {
                const response = await fetch('/changepassword', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email, newPassword })
                });

                if (response.ok) {
                    window.location.href = '/home';
                } else {
                    alert('Failed to change password. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        });
    </script>
</body>
</html>
