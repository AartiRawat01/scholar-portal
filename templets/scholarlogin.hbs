         /* ===== Google Font Import - Poppins ===== */
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600&display=swap');
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body{
  /* Replace 'background.jpg' with the path to your image file */

    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100vw;

    margin: 0;
    background-image:url('/images/upes_img.jpg');
     background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

.container {
    background-image: url("images/upes img.jpg");

    background-color: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
}

form {
    display: flex;
    flex-direction: column;
    align-items: center;
}

h2 {
    text-align: center;
    margin-bottom: 20px;
}

.form-group {
    width: 100%;
    margin-bottom: 15px;
}

label {
    display: block;
    margin-bottom: 5px;
}

input[type="email"],
input[type="password"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}

.remember-me {
    display: flex;
    align-items: center;
}

.remember-me label {
    margin-left: 5px;
}

button {
    width: 100%;
    padding: 10px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

button:hover {
    background-color: #45a049;
}

.forgot-link,
.signup-link {
    text-align: center;
    margin-top: 10px;
}

.signup-link p {
    margin: 0;
}

a {
    color: #4CAF50;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}
</style>
</head>
<body>
    <div class="container">
        <form id="login-form">
            <h2>Login</h2>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="xyz@gmail.com">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="1234">
            </div>
            <div class="form-group remember-me">
                <input type="checkbox" id="remember-me" name="remember-me">
                <label for="remember-me">Remember me</label>
            </div>
            <div class="form-group">
                <a href="#" class="forgot-link">Forgot Email?</a>
            </div>
            <button type="button" id="loginsubmit">Login</button>
    
                {{!-- <p>Don't have an account? <a href="/changepassword">Change Password</a></p> --}}
                
            </div>
        </form>
    </div>

    <script>
        

    
    const loginForm = document.getElementById('loginsubmit');

    loginForm.addEventListener('click', async function(event) {
        event.preventDefault();

     //   window.location.href = '/reginsert';


       

        const username = document.getElementById('email').value;
        const password = document.getElementById('password').value;
      
      console.log('hola');
        try {
            const response = await fetch('/changepassword', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ username, password })
            });

            console.log('hola');

            if (response.ok) {
                // Redirect to home screen
                console.log("hola");
                window.location.href = '/changepassword';
            } else {
                const errorData = await response.json();
                alert(errorData.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('An error occurred. Please try again.');
        }
    });


    </script>
