document.addEventListener('DOMContentLoaded', async () => {
    const studentId = document.getElementById('studentId').value;
    async function fetchAndPopulateRegistrationData(studentId) {
        try {
            const response = await fetch(`/registration/${studentId}`);
            if (!response.ok) {
                throw new Error('Error fetching data');
            }
            const data = await response.json();
            populateForm(data);
        } catch (error) {
            console.error('Error fetching registration data:', error);
        }
    }
    function populateForm(data) {
        for (const key in data) {
            if (data.hasOwnProperty(key)) {
                const inputField = document.querySelector(`[name="${key}"]`);
                if (inputField) {
                    inputField.value = data[key];
                }
            }
        }
    }
    async function submitFormData(formObject) {
        try {
            const response = await fetch('/registrationform2', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formObject)
            });
            if (!response.ok) {
                throw new Error('Error submitting the form');
            }
            const result = await response.json();
            alert('Form is successfully submitted!');
  sessionStorage.setItem('registrationData', JSON.stringify(formObject));
            setTimeout(() => {
                window.location.href = '/registrationform2'; 
            }, 2000);
        } catch (error) {
            console.error('Error submitting the form:', error);
        }
    }
    const form = document.getElementById('registrationForm');
    if (form) {
        form.addEventListener('submit', async function (event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const formObject = {};

            formData.forEach((value, key) => {
                formObject[key] = value;
            });
            await submitFormData(formObject);
        });
    }
