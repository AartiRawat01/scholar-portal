.container form {
    position: relative;
    margin-top: 16px;
    min-height: 4000px;
    background-color: #fff;
    overflow: hidden;
}

.container form .form {
    position: absolute;
    background-color: #fff;
    transition: 0.3s ease;
}

.container form .form.second {

    opacity: 0;
    pointer-events: none;
    transform: translateX(100%);
    min-height: auto;

}

form.secActive .form.second {
    opacity: 1;
    pointer-events: auto;
    transform: translateX(0);

}

form.secActive .form.first {
    opacity: 0;
    pointer-events: none;
    transform: translateX(-100%);
}

.container form .title {
    display: flex;
    margin-bottom: 8px;
    font-size: 16px;
    font-weight: 500;
    margin: 6px 0;
